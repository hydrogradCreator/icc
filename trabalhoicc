#include <stdio.h>
 
int main() {
    int n,j,a,b,pontosA=0,pontosB=0;
    scanf("%d",&n);
    do{
        if (n < 0 || n > 10){
        return 0; 
        }
        for (j = 0; j < n; j++){
            scanf("%d %d",&a,&b);
            if (a > b){
                pontosA++;
            }
            else if (b > a){
                pontosB++;
            }
        }
    printf ("%d %d\n",pontosA,pontosB);
    pontosA=0;
    pontosB=0;
    scanf ("%d",&n);
        
    } while (n != 0);
 
    return 0;
}
